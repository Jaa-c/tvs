    if(queue[i] == 0)
      return false;
  }
  return true;
}

void enQueue(int nova_lod) {
  int i;
  for(i = 0; i &lt; queue_size; i++) {
    if(queue[i] == 0) {
      queue[i] = nova_lod;
      return;
    }
  }
}

int deQueue() {
